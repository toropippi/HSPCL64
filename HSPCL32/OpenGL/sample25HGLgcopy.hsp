#include "hspcl32.as"
	HCLini
	HGLSetView

	ang=0.0
	glClearColor 0.0, 1.0, 0.0, 1.0//背景色指定、ｗ成分は1.0

	glEnable GL_TEXTURE_2D;テクスチャ使いますよ
	HGLCreateTexture1_texload txid,"lighting.jpg";読み込み専用テクスチャにlighting.jpgをロード


	repeat -1
		stick key
	    glClear (GL_COLOR_BUFFER_BIT | GL_DEPTH_BUFFER_BIT); 

		view2D//2D描画
		pos 40,30
		HGLgcopy txid,100,100,150,160

		glFinish
		await 16
		SwapBuffers wglGetCurrentDC()
		getkey key,27:if key:HCLbye:end
	loop

